{{!< default}}

<div class="container">
	<h1>Sign Up</h1>
	{{#if user}}
	<p>You are already logged in.</p>
	{{else}}
	<p>Fill form in order to sign up.</p>
	{{/if}}

	<form action="/api/signup" class="contact-form row col-sm-8 col-md-6" method="post">
		<input type="hidden" name="action" value="user.create">

		<div class="form-group">
			<label>Name</label>
		</div>

		<div class="row">
			<div class="col-sm-6 col-md-6">
				<input type="text" class="form-control input-box" name="first" value="{{formData.first}}" placeholder="First Name">
			</div>
			<div class="col-sm-6 col-md-7">
				<input type="text" class="form-control input-box" name="last" value="{{formData.last}}" placeholder="Last Name">
			</div>
		</div>
		<div class="form-group">
			<label>
				Email
			</label>
			<input type="email" class="form-control input-box" name="email" value="{{formData.email}}" placeholder="Email">
		</div>

		<div class="form-group">
			<label>Password</label>
			<div class="row">
				<div class="col-sm-6 col-md-6">
					<input type="password" class="form-control input-box" name="password" value="{{formData.password}}" placeholder="Password">
				</div>
				<div class="col-sm-6 col-md-6">
					<input type="password" class="form-control input-box" name="password_confirm" value="{{formData.password_confirm}}"
						placeholder="Retype password">
				</div>
			</div>
		</div>
		<button type="submit" class="btn btn-secondary" style="color: grey">Sign up</button>
	</form>
</div>
