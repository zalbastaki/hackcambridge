{{!< default}}

<div class="container index-container">
	<div class="main-text">
		<p>SAY THIS:</p>
		<p id="word">{{ word.name }}</p>

		<label>
			<p>
				{{ word.phoneticTranscription }}
			</p>

			<button class="btn btn-secondary" onclick="$('#pronounce')[0].play()" style="color: #222; border-radius: 50%; width: 48px; height: 48px;">
				<i class="fas fa-volume"></i>
			</button>

			<audio id="pronounce" src="https://media.merriam-webster.com/audio/prons/en/us/mp3/w/wherew02.mp3" type="audio/mp3"></audio>
		</label>
	</div>
	<div class="text-left">
		<h3>Definition</h3>
		<p id="definition">{{ word.definition }}</p>
	</div>
</div>
